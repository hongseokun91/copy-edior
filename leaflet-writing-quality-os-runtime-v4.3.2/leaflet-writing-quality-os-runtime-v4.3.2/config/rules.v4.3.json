      "score": {
        "bonus": 6,
        "dimensionDelta": {
          "credibility_safety": 1
        }
      },
      "message": "인증/수상 신호"
    },
    {
      "id": "EV-105",
      "name": "Evidence: partner/press outlet/date present",
      "category": "credibility_safety",
      "severity": "LOW",
      "modules": [
        "PARTNERS",
